# .env.example
# Email Configuration
EMAIL_SENDER="your_email@gmail.com"
EMAIL_PASSWORD="your_app_specific_password"  # For Gmail, use an App Password
EMAIL_RECEIVER="recipient_email@gmail.com"
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"  # Typically 587 for TLS, 465 for SSL

# Flask Configuration (optional)
FLASK_SECRET_KEY="your-secret-key-here"
FLASK_HOST="0.0.0.0"  # Optional - default is 0.0.0.0
FLASK_PORT="5000"     # Optional - default is 5000

# Camera Configuration (optional)
CAMERA_WIDTH="320"    # Default width for camera capture
CAMERA_HEIGHT="240"   # Default height for camera capture
CAMERA_FPS="20"       # Default frames per second